<!DOCTYPE html>
<html>
<head>
  <title>Cars Index</title>
</head>
<body>
  <h1>Cars</h1>
  <a href="/cars/new">Add New Car</a>
  <ul>
    <% cars.forEach(car => { %>
      <li>
        <a href="/cars/<%= car._id %>"><%= car.make %> <%= car.model %></a>
        <a href="/cars/<%= car._id %>/edit">Edit</a>
        <form action="/cars/<%= car._id %>?_method=DELETE" method="POST">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>
</body>
</html>
