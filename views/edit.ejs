<!DOCTYPE html>
<html>
<head>
  <title>Edit <%= car.make %> <%= car.model %></title>
</head>
<body>
  <h1>Edit <%= car.make %> <%= car.model %></h1>
  <form action="/cars/<%= car._id %>?_method=PUT" method="POST">
    <label for="make">Make:</label>
    <input type="text" name="make" id="make" value="<%= car.make %>" required>
    <label for="model">Model:</label>
    <input type="text" name="model" id="model" value="<%= car.model %>" required>
    <label for="year">Year:</label>
    <input type="number" name="year" id="year" value="<%= car.year %>" required>
    <label for="price">Price:</label>
    <input type="number" name="price" id="price" value="<%= car.price %>" required>
    <label for="image">Image URL:</label>
    <input type="text" name="image" id="image" value="<%= car.image %>">
    <button type="submit">Update Car</button>
  </form>
  <a href="/cars/<%= car._id %>">Cancel</a>
</body>
</html>
